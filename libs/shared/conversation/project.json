{
  "name": "shared-conversation",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/conversation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/conversation",
        "main": "libs/shared/conversation/src/index.ts",
        "tsConfig": "libs/shared/conversation/tsconfig.lib.json",
        "assets": ["libs/shared/conversation/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/shared/conversation/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/conversation/jest.config.ts"
      }
    }
  },
  "tags": ["scope:shared", "type:library"]
}