{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@glavito-workspace/source"],
    "baseUrl": ".",
    "paths": {
      "@glavito/database": ["libs/shared/database/src/index.ts"],
      "@glavito/shared-ai": ["libs/shared/ai/src/index.ts"],
      "@glavito/shared-analytics": ["libs/shared/analytics/src/index.ts"],
      "@glavito/shared-auth": ["libs/shared/auth/src/index.ts"],
      "@glavito/shared-conversation": ["libs/shared/conversation/src/index.ts"],
      "@glavito/shared-conversation/*": [
        "libs/shared/conversation/src/*",
        "dist/libs/shared/conversation/src/*"
      ],
      "@glavito/shared-database": ["libs/shared/database/src/index.ts"],
      "@glavito/shared-kafka": ["libs/shared/kafka/src/index.ts"],
      "@glavito/shared-types": ["libs/shared/types/src/index.ts"],
      "@glavito/shared-workflow": ["libs/shared/workflow/src/index.ts"],
      "@glavito/shared-workflow/*": [
        "libs/shared/workflow/src/*",
        "dist/libs/shared/workflow/src/*"
      ]
    }
  }
}
