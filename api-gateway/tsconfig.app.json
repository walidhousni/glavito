{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "src/health/**",
    "src/**/*.spec.ts",
    "src/**/__tests__/**"
  ],
  "references": [
    {
      "path": "../libs/shared/workflow/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/conversation/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/kafka/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/analytics/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/auth/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/ai/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/types/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared/database/tsconfig.lib.json"
    }
  ]
}
