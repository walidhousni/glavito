{
  "name": "@glavito-workspace/api-gateway",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@glavito-workspace/api-gateway:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@glavito-workspace/api-gateway:build:development"
          },
          "production": {
            "buildTarget": "@glavito-workspace/api-gateway:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@nestjs/serve-static": "^5.0.3",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0"
  }
}
