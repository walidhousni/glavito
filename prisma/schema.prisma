  position   Json         @default("{}")
  config     Json         @default("{}")
  createdAt  DateTime     @default(now())

  version    FlowVersion  @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@unique([versionId, key])
  @@map("flow_nodes")
}

model FlowEdge {
